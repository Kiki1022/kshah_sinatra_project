    <ul>
        <li>
            <a href="clients/new">New Client</a>
        </li>
        <li class="nav__border">
            <a href="users/<%= current_user.id %>">Home</a>
        </li>
        <li>
             <a href="/logout">Log Out</a>
        </li>
    </ul>
   
</nav>
 <% if flash[:message] %>
        <h2 style="color: red;"><%= flash[:message] %></h2>
 <% end %>
 <br>
<h1>My Clients:</h1><br>
<% @clients = current_user.clients %> 
<% if @clients.count == 0 %>
    <h2 style="color:red;">You have no clients. Click <a href="clients/new">here</a> to create a client profile.</h2>
<% else %>
    <% @clients.each do |a| %>
        <h3>Name: <%= a.name %><h2><br>
        <h3>Email: <%= a.email %><h2><br>
        <h2>Event: <%= a.event %><h2><br>
        <h2>Rate: $<%= a.rate %><h2><br>
        <a href="/clients/<%= a.id %>/edit" class="button">Edit</a>
        <br>
        <br>
    <%end%>
<%end%>


<% if @errors %>
  <% @errors.uniq.each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

